extends layout

block content
    include _header
    main.container#app
        section#a-account
            h4 Account
            .row
                .col.s12
                    .input-field
                        input#a-private-key.validate(type="text" v-model="privateKey")
                        label(for="a-private-key") Private Key
                    pre(v-if="!isDataHidden") {{ data }}

        section#n-node
            h4 Node
            .row
                .col.s12
                    .input-field
                        input#n-private-key.validate(type="text" v-model="url")
                        label(for="a-private-key") Node (host:port)
                    div
                        a.waves-effect.waves-light.btn(@click="debouncedGetNodeInfo") get
            .row
                .col.s12
                    pre {{ data }}
                    div {{ message }}


    include _footer

block script
    script(src="javascripts/index.js")
