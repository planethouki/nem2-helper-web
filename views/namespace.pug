extends layout

block content
    include _header
    main.container#app
        h4 #{ title }
        .row#e
            .col.s12
                h5.header Namespace to ID
                .input-field
                    input#e-namespace.validate(type="text" v-model:value="e_namespace" ref="e_focus")
                    label(for="e-namespace") Namespace
                div {{ e_namespace_id_uint64 }}
                div {{ e_namespace_id_hex }}
                div.right-align(v-if="!e_namespace")
                    button.waves-effect.waves-light.btn(v-on:click="e_sample") sample
        .row#f
            .col.s12
                h5.header SubNamespace to ID
                .input-field
                    input#f-sub-namespace.validate(type="text" v-model:value="f_sub_namespace" ref="f_focus1")
                    label(for="f-sub-namespace") SubNamespace
                .input-field
                    input#f-parent-namespace.validate(type="text" v-model:value="f_parent_namespace" ref="f_focus2")
                    label(for="f-parent-namespace") ParentNamespace
                div {{ f_namespace_id_uint64 }}
                div {{ f_namespace_id_hex }}
                div.right-align(v-if="!f_sub_namespace || !f_parent_namespace")
                    button.waves-effect.waves-light.btn(v-on:click="f_sample") sample
        .row#g
            .col.s12
                h5.header Mosaic to ID
                .input-field
                    input#g-mosaic.validate(type="text" v-model:value="g_mosaic" ref="g_focus")
                    label(for="g-mosaic") Namespace[.SubNamespace]:Mosaic
                div {{ g_mosaic_id_uint64 }}
                div {{ g_mosaic_id_hex }}
                div.right-align(v-if="!g_mosaic")
                    button.waves-effect.waves-light.btn(v-on:click="g_sample") sample
    include _footer

block script
    script(src="javascripts/namespace.js")
